<div class="row">
  <div class="col-xs-12">
    <h1>Inbox</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-2 email">
    <ul>
      <li>Sender</li>
      {{#each email in model}}
        <li>{{#link-to 'email' email}}{{email.sender}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>

  <div class="col-xs-4 email">
    <ul>
      <li>Subject</li>
      {{#each email in model}}
        <li>{{#link-to 'email' email}}{{email.subject}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>
</div>
